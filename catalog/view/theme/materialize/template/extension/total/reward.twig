<li class="arrow-rotate">
	<div class="collapsible-header grey lighten-5"><i class="material-icons">account_balance_wallet</i><span class="text-bold">{{ heading_title }}</span></div>
	<div class="collapsible-body">
		<div class="input-field">
			<input type="text" name="reward" value="{{ reward }}" id="input-reward">
			<label for="input-reward">{{ entry_reward }}</label>
		</div>
		<div class="flex-reverse">
			<button type="submit" value="{{ button_reward }}" id="button-reward" class="btn blue waves-effect waves-light right">{{ button_reward }}</button>
		</div>
	</div>
</li>
<script>
document.addEventListener("DOMContentLoaded", function(event) {
	$('#button-reward').on('click', function() {
		$.ajax({
			url: 'index.php?route=extension/total/reward/reward',
			type: 'post',
			data: 'reward=' + encodeURIComponent($('input[name=\'reward\']').val()),
			dataType: 'json',
			success: function(json) {
				if (json['error']) {
					M.toast({html: '<i class="material-icons left">warning</i>'+json['error'], classes: 'toast-warning'});
				}
				if (json['redirect']) {
					location = json['redirect'];
				}
			}
		});
	});
});
</script>