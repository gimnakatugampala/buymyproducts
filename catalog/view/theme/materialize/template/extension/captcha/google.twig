<script defer src="//www.google.com/recaptcha/api.js"></script>
<div class="section" style="overflow:auto;">
	<h4>{{ text_captcha }}</h4>
	{% if route|slice(0, 9) == 'checkout/' %}
		<label for="input-payment-captcha">{{ entry_captcha }}</label>
		<div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
		{% if error_captcha %}<script>document.addEventListener("DOMContentLoaded", function(event) {Materialize.toast({{ error_captcha }},4000)});</script>{% endif %}
	{% else %}
		<label>{{ entry_captcha }}</label>
		<div class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
		{% if error_captcha %}<script>document.addEventListener("DOMContentLoaded", function(event) {Materialize.toast({{ error_captcha }},4000)});</script>{% endif %}
	{% endif %}
</div>